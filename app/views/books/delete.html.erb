<div class = "Delete Book">
    <h1>Delete Book</h1>
    <%=form_for(@book, :method=> 'delete') do |form| %>>
    <h1>Are you sure you want to delete this book?</h1> 

    <p>
    <strong>Title:</strong>
    <%= @book.title %>
    <strong>Author:</strong>
    <%= @book.author %>
    <strong>Price:</strong>
    <%= @book.price %>
    <strong>Published:</strong>
    <%= @book.published_date %>
    </p>
    <div class="form-buttons">
        <%= form.submit("Delete Book") %>
    </div>

    <%= link_to 'Show', @book %> |
    <%= link_to 'Back', books_path %>
    <%end%>
</div>